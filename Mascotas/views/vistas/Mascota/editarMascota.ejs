<h1>Editar Mascotas</h1>
<p>Â¡Edita a tu mascota!</p>

<div class="row">
  <div class="col-sm-12">
    <form action="Usuario/editarMascota" method="post">
      <div class="form-group">
        <label>Nombre</label>
        <input required type="text" class="form-control" placeholder="Nombre" name="nombre"
               value="<%= mascota.nombre %>">
      </div>

      <div class="form-group">
        <label>Fecha Nacimiento</label>
        <input type="date" class="form-control" placeholder="Fecha Nacimiento" name="fechaNacimiento"
               value="<%= mascota.fechaNacimiento.getFullYear() + '-' + ('0' + mascota.fechaNacimiento.getDate()).slice(-2) + '-' + ('0' + (mascota.fechaNacimiento.getMonth() + 1)).slice(-2) %>">
      </div>

      <label for="">Raza</label>

      <select class="form-control" name="idRaza">
        <% var selected;
        for(var i = 0; i < razas.length; i++){
        if (razas[i].id == mascota.idRaza) {
          selected=" selected=\"selected\"";
        } else {
          selected="";
        } %>
        <option value='<%= razas[i].id %>'<%=selected%>>
          <%= razas[i].nombre %>
        </option>
        <% } %>
      </select>

      <br>
      <label for="">Pais Nacimiento</label>
      <select class="form-control" name="paisNacimiento">
        <% if (mascota.paisNacimiento == 'Ecuador') {
            selected=" selected=\"selected\"";
          } else {
            selected="";
          } %>
        <option value='Ecuador'<%=selected%>>Ecuador</option>
        <% if (mascota.paisNacimiento == 'Peru') {
          selected=" selected=\"selected\"";
        } else {
          selected="";
        } %>
        <option value='Peru'<%=selected%>>Peru</option>
        <% if (mascota.paisNacimiento == 'Colombia') {
          selected=" selected=\"selected\"";
        } else {
          selected="";
        } %>
        <option value='Colombia'<%=selected%>>Colombia</option>
      </select>
      <br>
      <input type="hidden" name="id" value="<%= mascota.id %>">
      <button type="submit" class="btn btn-success">Actualizar Mascota</button>

    </form>
  </div>
</div>
